<wsdl:definitions name="HelloWorld"
                  xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
                  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
                  xmlns:tns="http://example.com/helloworld"
                  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                  xmlns:trans="http://example.com/transform"
                  targetNamespace="http://example.com/helloworld">

    <!-- Importing the external XSD -->
    <wsdl:types>
        <xsd:schema>
            <xsd:import namespace="http://example.com/transform" schemaLocation="TransformMessageType.xsd"/>
        </xsd:schema>
    </wsdl:types>

    <wsdl:message name="TransformMessageRequest">
        <wsdl:part name="parameters" element="trans:TransformMessageType"/>
    </wsdl:message>

    <wsdl:message name="TransformMessageResponse">
        <wsdl:part name="parameters" element="trans:TransformMessageType"/>
    </wsdl:message>

    <wsdl:portType name="HelloWorldPort">
        <wsdl:operation name="TransformMessageOperation">
            <wsdl:input message="tns:TransformMessageRequest"/>
            <wsdl:output message="tns:TransformMessageResponse"/>
        </wsdl:operation>
    </wsdl:portType>

    <wsdl:binding name="HelloWorldBinding" type="tns:HelloWorldPort">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <wsdl:operation name="TransformMessageOperation">
            <soap:operation soapAction=""/>
            <wsdl:input>
                <soap:body use="literal"/>
            </wsdl:input>
            <wsdl:output>
                <soap:body use="literal"/>
            </wsdl:output>
        </wsdl:operation>
    </wsdl:binding>

    <wsdl:service name="HelloWorldService">
        <wsdl:port name="HelloWorldPort" binding="tns:HelloWorldBinding">
            <soap:address location="http://localhost:8080/ws/helloworld"/>
        </wsdl:port>
    </wsdl:service>

</wsdl:definitions>